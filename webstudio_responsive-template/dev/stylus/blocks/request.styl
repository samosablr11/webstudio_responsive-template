//////////////////////////////////////// Block variables


//////////////////////////////////////// Block mixins and functions


//////////////////////////////////////// Block styles
$block = ".request"

{$block}
	position relative
	min-height 220px
	gs-column(1,4,1%)

	@media screen and (max-width:980px)
		gs-column(1,2,1%)


	// $Request title
	&__title
		padding-bottom 12px
		margin-bottom 15px
		border-width 0
		border-bottom 1px solid #d2d2d2


	// $Request button
	&__btn
		display block
		position absolute
		width 100%
		height 60px
		bottom 0
		margin-top 15px
		border 10px solid #e6e6e6
		cursor pointer
		color #018af4
		font-size 13px
		line-height 35px
		font-weight bold
		text-align center
		background-image: linear-gradient(to bottom, #fff, #f1f1f1)

		&:hover
			text-decoration none
			background-image: linear-gradient(to top, #fff, #f1f1f1)
